 All hybris buildcallbacks.xml macrodefinitions:
 
 Build/Documentation
 
	 before/after ant macro "clean"
		 <macrodef name="hepcore_before_clean"/>
		 <macrodef name="hepcore_after_clean"/>

	 before/after ant macro "build"
		 <macrodef name="hepcore_before_build"/>
		 <macrodef name="hepcore_after_build"/>

	 before/after ant macro "compile_core" - the core module of the extension
		 <macrodef name="hepcore_before_compile_core">
		 <macrodef name="hepcore_after_compile_core">

	 before/after ant macro "compile_web" - the web module of the extension
		 <macrodef name="hepcore_before_compile_web" />
		 <macrodef name="hepcore_after_compile_web" />

	 before/after ant macro "compile_hmc" - the hmc module of the extension
		 <macrodef name="hepcore_before_compile_hmc" />
		 <macrodef name="hepcore_after_compile_hmc" />
 
 Preparing extension
 
	 will be called in the beginning of the ant call and only once (also when using multiple 
	 ant targets e.g. ant build yunittest)
		 <macrodef name="hepcore_only_once_prepare"/>
 
 Creating ear module/production
 
	 before/after ant macro "ear"
		 <macrodef name="hepcore_before_ear"/>
		 <macrodef name="hepcore_after_ear"/>

	 before/after ant macro "production" - for hybris server only
		 <macrodef name="hepcore_before_production" />
		 <macrodef name="hepcore_after_production" />
 
 JUnit Test
 
	 before/after ant macro "yunitinit" 
		 <macrodef name="hepcore_before_yunitinit" />
		 <macrodef name="hepcore_after_yunitinit" />

	 before/after ant macro "yunit"
		 <macrodef name="hepcore_before_yunit" />
		 <macrodef name="hepcore_after_yunit" /> 

 Distribution package
 
 	 before/after ant macro "dist" - internal target; only for use when platform is available in source code
		 <macrodef name="hepcore_after_dist"/>
		 <macrodef name="hepcore_before_dist"/>

	 before/after ant macro "dist_copy" - internal target; only for use when platform is available in source code
		 <macrodef name="hepcore_before_dist_copy"/>
		 <macrodef name="hepcore_after_dist_copy"/>

--><project name="hepcore_buildcallbacks">

	<macrodef name="hepcore_after_build">
		<sequential>
			<impexGenerate extname="hepcore"/>
		</sequential>
	</macrodef>

	<macrodef name="hepcore_after_clean">
		<sequential>
			<delete failonerror="false" file="${ext.hepcore.path}/resources-lang/touch_impexgen"/>
		</sequential>
	</macrodef>
	

	<macrodef name="hepcore_after_dist_copy">
		<sequential>
			<if>
				<available file="${ext.hepcore.path}/../recipes/" type="dir"/>
				<then>
					<copy preservelastmodified="true" todir="${destination.folder}/../installer/recipes">
						<fileset dir="${ext.hepcore.path}/../recipes/"/>
					</copy>
					<if>
						<istrue value="${dist.development.dist}"/>
						<then>
							<copy preservelastmodified="true" todir="${destination.develop.folder}/../installer/recipes">
								<fileset dir="${ext.hepcore.path}/../recipes/"/>
							</copy>
						</then>
					</if>
				</then>
			</if>
		</sequential>
	</macrodef>
	
	<!-- exclude impex files from localization --> 
	<patternset id="hepcore.localization.pattern">
		<patternset refid="localization.defaultpattern"/>
		<exclude name="**/*.impex"/>
	</patternset>
	

</project>
